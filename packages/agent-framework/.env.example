# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-...

# OAuth Configuration (optional)
# TWITTER_CLIENT_ID=your_client_id
# TWITTER_CLIENT_SECRET=your_client_secret
# LINKEDIN_CLIENT_ID=your_client_id
# LINKEDIN_CLIENT_SECRET=your_client_secret

# Token Storage
# TOKEN_STORAGE_PATH=./tokens
# TOKEN_ENCRYPTION_KEY=<generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())">

# Memory Storage
# MEMORY_STORAGE_PATH=./memories
# MEMORY_BACKEND=file  # Options: file (default), database

# Database Configuration (optional - for DatabaseMemoryStore and RAG)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# RAG Configuration (optional - requires PostgreSQL with pgvector)
# RAG_DATABASE_URL=postgresql://user:password@localhost:5432/dbname  # Falls back to DATABASE_URL
# OPENAI_API_KEY=sk-...  # Required for RAG embeddings
# RAG_EMBEDDING_MODEL=text-embedding-3-small
# RAG_TABLE_NAME=rag_documents

# Slack Integration (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Slack Bot Integration - For Multi-Agent Slack Bot (optional, requires Socket Mode)
# SLACK_BOT_TOKEN=xoxb-...  # Bot User OAuth Token
# SLACK_APP_TOKEN=xapp-...  # App-Level Token for Socket Mode
# SLACK_SIGNING_SECRET=...  # Signing Secret for request verification

# Lakera Guard - Prompt Injection Detection (optional)
# LAKERA_API_KEY=your_lakera_api_key
# LAKERA_PROJECT_ID=your_project_id
# LAKERA_FAIL_OPEN=true  # Set to false to block content on API failures

# Logging
# LOG_LEVEL=INFO
# LOG_DIR=~/.agents/logs
