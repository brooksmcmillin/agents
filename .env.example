# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# Remote MCP Server (for task manager and other remote agents)
MCP_SERVER_URL=https://mcp.brooksmcmillin.com/mcp

# Manual OAuth Token (optional - will use automatic OAuth if not set)
# The RemoteMCPClient now supports automatic OAuth authentication.
# If MCP_AUTH_TOKEN is not set, the client will:
# 1. Discover OAuth configuration from the server
# 2. Open your browser for authentication
# 3. Save tokens automatically for future use
# Only set this if you want to bypass OAuth and use a manual token
#MCP_AUTH_TOKEN=your_manual_token_here

# MCP OAuth Configuration (for automatic authentication)
# Register your callback URL: http://localhost:8889/callback
MCP_AUTHORIZE_URL=https://todo.brooksmcmillin.com/authorize
MCP_TOKEN_URL=https://todo.brooksmcmillin.com/oauth/token
MCP_CLIENT_ID=your_mcp_client_id
MCP_CLIENT_SECRET=your_mcp_client_secret
MCP_OAUTH_SCOPE=mcp:read mcp:write

# OAuth Configuration (for future integrations)
# Twitter/X API
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Token Storage
TOKEN_STORAGE_PATH=./tokens
TOKEN_ENCRYPTION_KEY=generate_a_secure_key_here

# Slack Integration
# Optional: Default Slack incoming webhook URL
# Get yours from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Logging
LOG_LEVEL=INFO
LOG_FILE=pr_agent.log
