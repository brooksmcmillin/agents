# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# OAuth Configuration (for future integrations)
# Twitter/X API
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Token Storage
TOKEN_STORAGE_PATH=./tokens
TOKEN_ENCRYPTION_KEY=generate_a_secure_key_here

# Slack Integration
# Optional: Default Slack incoming webhook URL
# Get yours from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Logging
LOG_LEVEL=INFO
LOG_FILE=pr_agent.log
